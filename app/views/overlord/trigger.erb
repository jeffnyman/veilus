<div class="component" id="trigger">
  <% if flash[:invalid_code] %>
    <label class="trigger-error"><%= flash[:invalid_code] %></label>
  <% end %>

  <% if flash[:invalid_activation] %>
    <label class="trigger-error"><%= flash[:invalid_activation] %></label>
  <% end %>

  <% if flash[:invalid_deactivation] %>
    <label class="trigger-error"><%= flash[:invalid_deactivation] %></label>
  <% end %>
  <table>
    <% if trigger.activated? %>
      <caption class="alert alert-danger" id="bomb-status">
        <strong>Bomb is active.</strong>
      </caption>
    <% else %>
      <caption class="alert alert-success" id="bomb-status">
        <strong>Bomb is inactive.</strong>
      </caption>
    <% end %>
    <tr>
      <td colspan="2">
        <div id="trigger-code-display">
          <fieldset>
            <input class="form-control input-lg" id="trigger-code" type="text">
          </fieldset>
        </div>
      </td>
      <td>
        <div class="btn btn-lg btn-primary btn-block" id="trigger-delete">
          <span class="glyphicon glyphicon-arrow-left"></span>
        </div>
      </td>
    </tr>
    <tr>
      <% (7..9).each do |num| %>
      <td>
        <button class="btn btn-lg btn-default btn-block" data-value="<%= num %>"><%= num %></button>
      </td>
      <% end %>
    </tr>
    <tr>
      <% (4..6).each do |num| %>
      <td>
        <button class="btn btn-lg btn-default btn-block" data-value="<%= num %>"><%= num %></button>
      </td>
      <% end %>
    </tr>
    <tr>
      <% (1..3).each do |num| %>
      <td>
        <button class="btn btn-lg btn-default btn-block" data-value="<%= num %>"><%= num %></button>
      </td>
      <% end %>
    </tr>
    <tr>
      <td>
        <button class="btn btn-lg btn-default btn-block" data-value="0">0</button>
      </td>
      <td colspan="2">
        <% if trigger.activated? %>
          <input class="btn btn-lg btn-block btn-danger" id="change-bomb-state" value="Deactivate" type="submit" />
        <% else %>
          <input class="btn btn-lg btn-block btn-danger" id="change-bomb-state" value="Activate" type="submit" />
        <% end %>
      </td>
    </tr>
  </table>
</div>
